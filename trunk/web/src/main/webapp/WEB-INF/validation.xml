        <form name="userForm">
            <field property="title" depends="required">
                <arg0 key="lable.title"/>
            </field>

            <field property="firstName" depends="required,minlength">
                <msg name="minlength" key="message.registration.firstaname" />
                <var>
                    <var-name>minlength</var-name>
                    <var-value>3</var-value>
                </var>
                <arg0 key="lable.registration.firstName"/>
